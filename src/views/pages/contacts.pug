extends ../layouts/default
include ../helpers/mixins

block variables
    - const title = "Контакты | РусЭкспорт"

block content
    include ../../blocks/modules/header/header
    main
        include ../../blocks/components/map/map
        include ../../blocks/components/contactsHeader/contactsHeader
        //- include ../../blocks/components/addressMap/addressMap
        include ../../blocks/components/addressList/addressList
        .contacts-form
            .contacts-form__container.container
                .contacts-form__wrapper.row
                    .contacts-form__content.col-12
                        include ../../blocks/modules/form/form
                        +form('Оставьте заявку на консультацию','form',[
                            {
                                'label' : 'Имя',
                                'name' : 'name',
                                'type' : 'text',
                            },
                            {
                                'label' : 'Телефон',
                                'name' : 'phone',
                                'type' : 'tel',
                            },
                            {
                                'label' : 'E-mail',
                                'name' : 'email',
                                'type' : 'email',
                            },
                            {
                                'label' : 'Сообщение',
                                'name' : 'message',
                                'type' : 'textarea',
                            },],
                            {},
                            {
                                'text' : 'Согласен на обработку персональных данных.',
                                'link' : {
                                    'title' : 'Политика конфиденциальности',
                                    'href' : '/politic'
                                },
                                'name' : 'politic'
                            },
                            'Отправить'
                        )
    include ../../blocks/modules/footer/footer
    include ../../blocks/modules/popup/popup

block scripts
    script(src="./js/main.js")
    script(src="./js/vendor.js")