extends ../layouts/default
include ../helpers/mixins

block variables
    - const title = "Импорт"

block content
    include ../../blocks/modules/header/header
    main
        include ../../blocks/modules/page-title/page-title
        +page-title-bg(title,[title],'services-cargo.jpg')
        .content
            .content__container.container
                .content__wrapper.row
                    .content__sidebar.col-lg-3
                        include ../../blocks/modules/sidebar/sidebar
                    .content__information.col-lg-9
                        .page.page--services
                            .page__content.text-big-lh
                                h2.subtitle(data-aos="fade-up") Импорт в Россию
                                include ../../blocks/components/download-docs/download-docs-import
                                p(data-aos="fade-up", data-aos-delay="150") Lorem ipsum dolor sit amet consectetur adipisicing elit. Rem dolorem nobis ipsa. Eum magni laborum cum repudiandae perferendis iste minus itaque laudantium nihil. Odit molestias velit eos aperiam ut itaque laborum? Ab, sunt. In quam, iure labore est quos et at molestias perferendis beatae ea, adipisci dolorum. A, facere possimus!
                                .clear-both
                                include ../../blocks/components/keypoints/keypoints-import
                                include ../../blocks/components/services/services-related-import
                                include ../../blocks/components/services/services-related-full-import
                                include ../../blocks/components/services/services-definition
                                +definition('Наша компания оказывает, как полный комплекс услуг "от двери до двери", так и отдельные виды услуг, по желанию клиента.<br><br>Мы оказываем услуги по экспорту товаров из России, как под собственные контракты, так и под контракты наших клиентов.')
                                include ../../blocks/components/services/services-subtitle-with-image-import
                                include ../../blocks/components/services/services-advantages-import
                                //- include ../../blocks/components/gridLinks/gridLinks-import
                                include ../../blocks/modules/form/form
                                +form('Оставьте заявку на консультацию','form',[
                                    {
                                        'label' : 'Имя',
                                        'name' : 'name',
                                        'type' : 'text',
                                    },
                                    {
                                        'label' : 'Телефон',
                                        'name' : 'phone',
                                        'type' : 'tel',
                                    },
                                    {
                                        'label' : 'E-mail',
                                        'name' : 'email',
                                        'type' : 'email',
                                    },
                                    {
                                        'label' : 'Сообщение',
                                        'name' : 'message',
                                        'type' : 'textarea',
                                    },],
                                    {},
                                    {
                                        'text' : 'Согласен на обработку персональных данных.',
                                        'link' : {
                                            'title' : 'Политика конфиденциальности',
                                            'href' : '/politic'
                                        },
                                        'name' : 'politic'
                                    },
                                    'Отправить'
                                )



    include ../../blocks/modules/footer/footer
    include ../../blocks/modules/popup/popup

block scripts
    script(src="./js/main.js")
    script(src="./js/vendor.js")